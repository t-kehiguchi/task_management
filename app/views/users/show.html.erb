<% provide(:title, @user.name) %>
<div class="container">

<h1>プロフィール</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <table class="table table-bordered" id="table-user">
        <tbody>
          <tr>
            <th class="active col-md-3">ID</th>
            <td class="col-md-9"><%= @user.id %></td>
          </tr>
          <tr>
            <th class="active">名前</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th class="active">メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th class="active">作成日</th>
            <td><%= @user.created_at.strftime("%Y/%-m/%-d %H:%M") %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>