<% provide(:title, "Top") %>
<div class="row">
  <div class="col-md-7">
    <div class="center jumbotron" id="top-main">
      <h1 id="top-main-title">TaskApp</h1>
      <p>TaskAppは簡易ToDo管理ツールです。</p>
      <p>↓↓初めてのご利用↓↓</p>
        <% if !logged_in? || current_user.admin %>
          <a class="btn btn-lg btn-success" href="/signup">アカウント作成</a>
        <% else %>
          <a class="btn btn-lg btn-success" href="/signup" disabled="disabled">アカウント作成</a>
        <% end %>
        <% unless logged_in? %>
          <div style="margin-top: 10px;">
            <a class="btn btn-danger" href="/guest-admin/login">ゲストログイン（管理権限）</a>
            <a class="btn btn-warning" href="/guest/login">ゲストログイン（一般権限）</a>
          </div>
        <% end %>
    </div>
  </div>

  <div class="col-md-4">
    <h1>ログイン</h1>
    <% unless logged_in? %>
    <form action="/login" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="✓"><input type="hidden" name="authenticity_token" value="sogrfh3PsG0jCuaP2QR32ZY+KXige6GK+8DiuHIej5nWDMvy4YXDVoGPXreFs8EScKUblh9c9mPBqJmWCccvuQ==">
        <label class="label-form" for="session_email">メールアドレス</label>
        <input class="form-control" type="email" name="session[email]">
  
        <label class="label-form" for="session_password">パスワード</label>
        <input class="form-control" type="password" name="session[password]">
        
        <label class="checkbox inline checkbox-login" for="remember-me">
          <input name="session[remember_me]" type="hidden" value="0"><input id="remember-me" type="checkbox" value="1" name="session[remember_me]">
          <span>ログイン情報を記憶する</span>
        </label>        
        <input type="submit" name="commit" value="ログイン" class="btn btn-primary btn-block btn-form" data-disable-with="ログイン">
    </form>
    <% else %>
      <form action="/login" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="✓"><input type="hidden" name="authenticity_token" value="S6iycLisTe8Kva6eTbRN8l7hMqIzYtDJCB6qXh24rfIvLFL8ROY+1Kg4FqYRA/s5uHoATIxFhyAydtFwZmEN0g==">
        <label class="label-form" for="session_email">メールアドレス</label>
        <input class="form-control" readonly="readonly" type="email" name="session[email]">
  
        <label class="label-form" for="session_password">パスワード</label>
        <input class="form-control" readonly="readonly" type="password" name="session[password]">
        
        <input type="submit" name="commit" value="ログイン状態です" class="btn btn-primary btn-block btn-form" disabled="disabled" data-disable-with="ログイン状態です">
      </form>
    <% end %>
  </div>
</div>